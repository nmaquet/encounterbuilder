.row
    .col-md-8
        h3 {{monster.Name}} ({{encounter.Monsters[monster.id].amount}})
            span.pull-right  CR {{monster.CR | numberToFractionString}}
    .col-md-4
        ul.list-unstyled
            li
                strong XP
                | &nbsp;{{monster.XP}}
                | &nbsp;
                strong {{monster.Alignment}}
                | &nbsp;{{monster.Size}} {{monster.Type}} {{monster.SubType}}
            li
                strong Init
                | &nbsp;{{monster.Init}}
                | &nbsp;
                strong Senses
                | &nbsp;{{monster.Senses}}
.row
    .col-xs-6
        legend Defense
        ul.list-unstyled
            li
                strong AC
                | &nbsp;{{monster.AC}}
            li
                strong HP
                | &nbsp;{{monster.HP}}
            li
                strong Fort
                | &nbsp;{{monster.Fort}},
                | &nbsp;
                strong Ref
                | &nbsp;{{monster.Ref}},
                | &nbsp;
                strong Will
                | &nbsp;{{monster.Will}}
            li(ng-if='monster.DR')
                strong DR
                | &nbsp;{{monster.DR}};
            li(ng-if='monster.Immune')
                strong Immune
                | &nbsp;{{monster.Immune}};
            li(ng-if='monster.Weaknesses')
                strong Weaknesses
                | &nbsp;{{monster.Weaknesses}};
            li(ng-if='monster.SR')
                strong SR
                | &nbsp;{{monster.SR}}
    .col-xs-6
        legend Offense
        ul.list-unstyled
            li
                strong SPD
                | &nbsp;{{monster.Speed}}
            li
                strong Melee
                | &nbsp;{{monster.Melee}}
            li
                strong Space
                | &nbsp;{{monster.Space}}
                | &nbsp;
                strong Reach
                | &nbsp;{{monster.Reach}}
            li(ng-if='monster.SpecialAttacks')
                strong Special Attacks
                | &nbsp;{{monster.SpecialAttacks}};
            li(ng-bind-html='monster.SLASafe')
.row
    .col-md-8
        legend Statistics
        ul.list-unstyled
            li
                strong Str
                | &nbsp;{{monster.Str}},
                | &nbsp;
                strong Dex
                | &nbsp;{{monster.Dex}},
                | &nbsp;
                strong Con
                | &nbsp;{{monster.Con}},
                | &nbsp;
                strong Int
                | &nbsp;{{monster.Int}},
                | &nbsp;
                strong Wis
                | &nbsp;{{monster.Wis}},
                | &nbsp;
                strong Cha
                | &nbsp;{{monster.Cha}}
                | &nbsp;
            li
                strong Base Atk
                | &nbsp;{{monster.BaseAtk}};
                strong CMB
                | &nbsp;{{monster.CMB}};
                strong CMD
                | &nbsp;{{monster.CMD}}
            li
                strong Feats
                | &nbsp;{{monster.Feats}}
            li
                strong Skills
                | &nbsp;{{monster.Skills}}
                | &nbsp;
                strong Racial Modifiers
                | &nbsp;{{monster.RacialMods}}
            li
                strong Languages
                | &nbsp;{{monster.Languages}}
            li(ng-if="monster.SQ")
                strong SQ
                | &nbsp;{{monster.SQ}}
            li
                strong Treasure
                | {{monster.Treasure}}
.row
    .col-md-12
        span(ng-if='monster.SpecialAbilitiesSafe')
            legend Special Abilities
            // FIXME Use jQuery to change the <h5> tags into <p> or <div>
            div(ng-bind-html='monster.SpecialAbilitiesSafe')