header.leaf-heading.col-sm-12
    .col-xxs-8.col-xs-8.col-lg-9.name-container
        h3.ect-title.t-title.t-leaf-title
            a.leaf-name.is-pointer(ng-click="selectLeaf(leaf)")
                i.icon.fa.fa-bug
                | &nbsp;
                | {{leaf.Name}}
    .col-xxs-4.col-xs-4.col-lg-3.cr-container
        .ect-xp
            span.encounter-cr.pull-right
                strong CR&nbsp;
                | {{leaf.CR | numberToFractionString}}
            span.encounter-xp.pull-left
                strong XP&nbsp;
                | {{leaf.XP | number}}
.leaf-content.col-sm-12
    ul.list-inline
        li(ng-if="leaf.Gender||leaf.Race||leaf.ClassesString")
            span {{leaf.Gender}} {{leaf.Race}} {{leaf.ClassesString}}
        li
            span
                strong {{leaf.Alignment}}
                | &nbsp;{{leaf.Size}} {{leaf.Type}} {{leaf.SubType}}
