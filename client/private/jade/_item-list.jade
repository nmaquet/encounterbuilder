.form-inline.form-group
    .col-xs-12
        label(for='sort') Sort by:&nbsp;
        select.form-control#item-sort(ng-model='sortOrder')
            option(value='name') Name
            option(value='price') Price
            option(value='cl') Caster Level
.col-xs-12
    table.items.table.table-striped.table-condensed
        thead
            tr.result-row
                th Name
                th Price
                th(colspan='3') Source
        tbody
            tr.pointer.item-row(ng-repeat='item in items')
                td(ng-class='{selected: selectedItemId == item.id}', ng-click='selectItemById(item.id)')
                    span {{item.Name}}
                td(ng-class='{selected: selectedItemId == item.id}', ng-click='selectItemById(item.id)')
                    span {{item.Price}}&nbsp;{{item.PriceUnit}}
                td(ng-class='{selected: selectedItemId == item.id}', ng-click='selectItemById(item.id)')
                    abbr(title='{{item.Source}}')
                        small {{item.Source | abbreviateMonsterSource}}
                td(ng-class='{selected: selectedItemId == item.id}')
                    input(type='text', placeholder='1', ng-model='item.amountToAdd', style='width: 25px;')
                td(ng-class='{selected: selectedItemId == item.id}')
                    button.item-btn.add-item-btn(ng-class="{disabled: !selectedEncounter}", ng-disabled="!selectedEncounter", ng-click='addItem(item)')
                        i.icon.icon-plus
                            | +
    pagination.pagination-sm.page.pointer(boundary-links='true', total-items='totalItems', page='currentPage', items-per-page='itemsPerPage', max-size='maxSize', previous-text='‹', next-text='›', first-text='«', last-text='»')
