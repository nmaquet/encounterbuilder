// TODO: adapt this
.row.heading.result-heading
    .col-xxs-8.col-xs-8.col-lg-9.name-container
        h2.t-title.t-title-result {{npc.Name}}
        small Source: {{npc.Source}}
    .col-xxs-4.col-xs-4.col-lg-3.cr-container
        h3.t-title CR
            | &nbsp;{{npc.CR | numberToFractionString}}
        strong XP
        | &nbsp;{{npc.XP}}
        .row.btn-container
            //a.col-xxs-3.col-xs-3.no-padding.action-btn.btn-1.is-pointer(title='Copy')
                i.icon.fa.fa-copy
            //a.col-xxs-3.col-xs-3.no-padding.action-btn.btn-2.is-pointer(title='Settings')
                i.icon.fa.fa-cogs
            a.col-xxs-3.col-xs-3.no-padding.action-btn.btn-4.is-pointer(title='Favourite',ng-click='toggleFavourite()')
                i(ng-show="favourite").icon.fa.fa-heart
                i(ng-hide="favourite").icon.fa.fa-heart-o
            //a.col-xxs-3.col-xs-3.no-padding.action-btn.btn-4.is-pointer(title='Delete')
                i.icon.fa.fa-times

.row.l-section.result-content
    .col-xxs-12.col-xs-12.cat
        p(ng-if="npc.Description_Visual").intro.underlined {{npc.Description_Visual}}
        ul.list-unstyled
            li
                span
                    strong XP
                    | &nbsp;{{npc.XP}}
            li(ng-if="npc.Gender||npc.Race||npc.Classes")
                span {{npc.Gender}} {{npc.Race}} {{npc.Classes|classesToString}}
            li
                span {{npc.Alignment}} {{npc.Size}} {{npc.Type}} {{npc.SubType}}
            li
                span
                    strong Init
                    | &nbsp;{{npc.Init}}
            li
                span
                    strong Senses
                    | &nbsp;{{npc.Senses}}
    .col-xxs-12.col-xs-12
        .row
            .col-xxs-12.col-xs-12.cat.decor
                legend.t-legend.t-title Defense
                ul.list-unstyled
                    li
                        span
                            strong
                                abbr(title='Armor Class') AC
                            | &nbsp;{{npc.AC}}; {{npc.AC_Mods}}
                    li
                        span
                            strong HP
                            | &nbsp;{{npc.HP}} {{npc.HD}}
                    li
                        span
                            strong Fort
                            | &nbsp;{{npc.Fort}},
                        span
                            strong Ref
                            | &nbsp;{{npc.Ref}},
                        span
                            strong Will
                            | &nbsp;{{npc.Will}}
                    li(ng-if='npc.DefensiveAbilities')
                        span
                            strong Defensive Abilities
                            | &nbsp;{{npc.DefensiveAbilities}}
                        span(ng-if='npc.Resist')
                            strong Resist
                            | &nbsp;{{npc.Resist}}
                    li(ng-if='npc.DR')
                        span
                            strong DR
                            | &nbsp;{{npc.DR}};
                    li(ng-if='npc.Immune')
                        span
                            strong Immune
                            | &nbsp;{{npc.Immune}};
                    li(ng-if='npc.Resist')
                        span
                            strong Resist
                            | &nbsp;{{npc.Resist}};
                    li(ng-if='npc.Weaknesses')
                        span
                            strong Weaknesses
                            | &nbsp;{{npc.Weaknesses}};
                    li(ng-if='npc.SR')
                        span
                            strong SR
                            | &nbsp;{{npc.SR}}
        .row
            .col-xxs-12.col-xs-12.cat.decor
                legend.t-legend.t-title Offense
                ul.list-unstyled
                    li
                        span
                            strong SPD
                            | &nbsp;{{npc.Speed}}
                    li
                        span
                            strong Melee
                            | &nbsp;{{npc.Melee}}
                    li(ng-if="npc.Ranged")
                        span
                            strong Ranged
                            | &nbsp;{{npc.Ranged}}
                    li
                        span
                            strong Space
                            | &nbsp;{{npc.Space}}
                            | &nbsp;
                        span
                            strong Reach
                            | &nbsp;{{npc.Reach}}
                    li(ng-if='npc.SpecialAttacks')
                        span
                            strong Special Attacks
                            | &nbsp;{{npc.SpecialAttacks}};
                    li(ng-if='npc.SpellsKnown')
                        spell-list(spell-string="{{npc.SpellsKnown}}", mythic="npc.Mythic")
                    li(ng-if='npc.Bloodline')
                        span
                            strong Bloodline
                            | &nbsp;{{npc.Bloodline}}
                    li(ng-if='npc.SpellsPrepared')
                        spell-list(spell-string="{{npc.SpellsPrepared}}" , mythic="npc.Mythic")
                    li(ng-bind-html='npc.SLASafe',linkify='npc.SLASafe',linkify-type="spell", mythic="npc.Mythic")
        .row
            .col-xxs-12.col-xs-12.cat.decor(ng-if='npc.BeforeCombat||npc.DuringCombat||npc.Morale||npc.BaseStatistics')
                div
                    legend.t-legend.t-title Tactics
                div
                    ul.list-unstyled
                        li(ng-if='npc.BeforeCombat', )
                            span
                                strong Before Combat
                                | &nbsp;
                                span(linkify='npc.BeforeCombat',linkify-type="spell", mythic="npc.Mythic")
                        li(ng-if='npc.DuringCombat')
                            span
                                strong During Combat
                                | &nbsp;
                                span(linkify='npc.DuringCombat',linkify-type="spell", mythic="npc.Mythic")
                        li(ng-if='npc.Morale')
                            span
                                strong Morale
                                | &nbsp;
                                span(linkify='npc.Morale',linkify-type="spell", mythic="npc.Mythic")
                        li(ng-if='npc.BaseStatistics')
                            span
                                strong Base Statistics
                                | &nbsp;{{npc.BaseStatistics}}
            .col-xxs-12.col-xs-12.cat.decor
                legend.t-legend.t-title Statistics
                ul.list-unstyled
                    li
                        span
                            strong Str
                            | &nbsp;{{npc.Str}},
                        span
                            strong Dex
                            | &nbsp;{{npc.Dex}},
                        span
                            strong Con
                            | &nbsp;{{npc.Con}},
                        span
                            strong Int
                            | &nbsp;{{npc.Int}},
                        span
                            strong Wis
                            | &nbsp;{{npc.Wis}},
                        span
                            strong Cha
                            | &nbsp;{{npc.Cha}}
                    li
                        span
                            strong Base Atk
                            | &nbsp;{{npc.BaseAtk}};
                        span
                            strong CMB
                            | &nbsp;{{npc.CMB}};
                        span
                            strong CMD
                            | &nbsp;{{npc.CMD}}
                    li
                        span
                            strong Feats
                            | &nbsp;
                            span(linkify="npc.Feats", linkify-type="feat", mythic="npc.Mythic")
                    li
                        span
                            strong Skills
                            | &nbsp;{{npc.Skills}}
                        span(ng-if="npc.RacialMods")
                            strong Racial Modifiers
                            | &nbsp;{{npc.RacialMods}}
                    li
                        span
                            strong Languages
                            | &nbsp;{{npc.Languages}}
                    li
                        span(ng-if="npc.SQ")
                            strong SQ
                            | &nbsp;{{npc.SQ}}
                    li
                        span
                            span(ng-if="npc.Gear")
                                strong Combat Gear
                                | &nbsp;{{npc.Gear}}
                            span(ng-if="npc.Gear && npc.OtherGear") ;&nbsp;
                            span(ng-if="npc.OtherGear")
                                strong Other Gear
                                | &nbsp;{{npc.OtherGear}}
    .col-xxs-12.col-xs-12.cat.decor
        span(ng-if='npc.SpecialAbilitiesSafe')
            legend.t-legend.t-title Special Abilities
            // FIXME Use jQuery to change the <h5> tags into <p> or <div>
            div(ng-bind-html='npc.SpecialAbilitiesSafe',linkify='npc.SpecialAbilitiesSafe',linkify-type="spell", mythic="npc.Mythic")
    .col-xxs-12.col-xs-12.cat.decor(ng-if='npc.Description')
        legend.t-legend.t-title Description
        div(ng-bind-html='npc.DescriptionSafe',linkify='npc.DescriptionSafe',linkify-type="spell", mythic="npc.Mythic")
