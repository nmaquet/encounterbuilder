// TODO: adapt this
.row.heading.result-heading
    .col-xs-8.col-lg-9.name-container
        h2.title.font-title {{npc.Name}}
        small Source: {{npc.Source}}
    .col-xs-4.col-lg-3.cr-container
        h3.title.font-title CR
            | &nbsp;{{npc.CR | numberToFractionString}}
        strong XP
        | &nbsp;{{npc.XP}}
        //.row.btn-container
            a.col-xs-3.no-padding.action-btn.btn-1.pointer(title='Copy')
                i.icon.fa.fa-copy
            a.col-xs-3.no-padding.action-btn.btn-2.pointer(title='Settings')
                i.icon.fa.fa-cogs
            a.col-xs-3.no-padding.action-btn.btn-3.pointer(title='Zap')
                i.icon.fa.fa-flash
            a.col-xs-3.no-padding.action-btn.btn-4.pointer(title='Delete')
                i.icon.fa.fa-times

.row.section.result-content
    .col-xs-12.cat
        p(ng-if="npc.Description_Visual").intro.underlined {{npc.Description_Visual}}
        ul.list-unstyled
            li
                span
                    strong XP
                    | &nbsp;{{npc.XP}}
            li(ng-if="npc.Gender||npc.Race||npc.Classes")
                span {{npc.Gender}} {{npc.Race}} {{npc.Classes|classesToString}}
            li
                span {{npc.Alignment}} {{npc.Size}} {{npc.Type}} {{npc.SubType}}
            li
                span
                    strong Init
                    | &nbsp;{{npc.Init}}
            li
                span
                    strong Senses
                    | &nbsp;{{npc.Senses}}
    .col-xs-12
        .row
            .col-xs-12.cat.decor
                legend.legend.font-title Defense
                ul.list-unstyled
                    li
                        span
                            strong
                                abbr(title='Armor Class') AC
                            | &nbsp;{{npc.AC}}; {{npc.AC_Mods}}
                    li
                        span
                            strong HP
                            | &nbsp;{{npc.HP}} {{npc.HD}}
                    li
                        span
                            strong Fort
                            | &nbsp;{{npc.Fort}},
                        span
                            strong Ref
                            | &nbsp;{{npc.Ref}},
                        span
                            strong Will
                            | &nbsp;{{npc.Will}}
                    li(ng-if='npc.DefensiveAbilities')
                        span
                            strong Defensive Abilities
                            | &nbsp;{{npc.DefensiveAbilities}}
                        span(ng-if='npc.Resist')
                            strong Resist
                            | &nbsp;{{npc.Resist}}
                    li(ng-if='npc.DR')
                        span
                            strong DR
                            | &nbsp;{{npc.DR}};
                    li(ng-if='npc.Immune')
                        span
                            strong Immune
                            | &nbsp;{{npc.Immune}};
                    li(ng-if='npc.Weaknesses')
                        span
                            strong Weaknesses
                            | &nbsp;{{npc.Weaknesses}};
                    li(ng-if='npc.SR')
                        span
                            strong SR
                            | &nbsp;{{npc.SR}}
        .row
            .col-xs-12.cat.decor
                legend.legend.font-title Offense
                ul.list-unstyled
                    li
                        span
                            strong SPD
                            | &nbsp;{{npc.Speed}}
                    li
                        span
                            strong Melee
                            | &nbsp;{{npc.Melee}}
                    li(ng-if="npc.Ranged")
                        span
                            strong Ranged
                            | &nbsp;{{npc.Ranged}}
                    li
                        span
                            strong Space
                            | &nbsp;{{npc.Space}}
                            | &nbsp;
                        span
                            strong Reach
                            | &nbsp;{{npc.Reach}}
                    li(ng-if='npc.SpecialAttacks')
                        span
                            strong Special Attacks
                            | &nbsp;{{npc.SpecialAttacks}};
                    li(ng-if='npc.SpellsKnown')
                        spell-list(spell-string="{{npc.SpellsKnown}}")
                    li(ng-if='npc.Bloodline')
                        span
                            strong Bloodline
                            | &nbsp;{{npc.Bloodline}}
                    li(ng-if='npc.SpellsPrepared')
                        spell-list(spell-string="{{npc.SpellsPrepared}}" )
                    li(ng-bind-html='npc.SLASafe',linkify-spells='npc.SLASafe')
        .row
            .col-xs-12.cat.decor(ng-if='npc.BeforeCombat||npc.DuringCombat||npc.Morale||npc.BaseStatistics')
                div
                    legend.legend.font-title Tactics
                div
                    ul.list-unstyled
                        li(ng-if='npc.BeforeCombat', linkify-spells='npc.BeforeCombat')
                            span
                                strong Before Combat
                                | &nbsp;{{npc.BeforeCombat}}
                        li(ng-if='npc.DuringCombat', linkify-spells='npc.DuringCombat')
                            span
                                strong During Combat
                                | &nbsp;{{npc.DuringCombat}}
                        li(ng-if='npc.Morale', linkify-spells='npc.Morale')
                            span
                                strong Morale
                                | &nbsp;{{npc.Morale}}
                        li(ng-if='npc.BaseStatistics')
                            span
                                strong Base Statistics
                                | &nbsp;{{npc.BaseStatistics}}
            .col-xs-12.cat.decor
                legend.legend.font-title Statistics
                ul.list-unstyled
                    li
                        span
                            strong Str
                            | &nbsp;{{npc.Str}},
                        span
                            strong Dex
                            | &nbsp;{{npc.Dex}},
                        span
                            strong Con
                            | &nbsp;{{npc.Con}},
                        span
                            strong Int
                            | &nbsp;{{npc.Int}},
                        span
                            strong Wis
                            | &nbsp;{{npc.Wis}},
                        span
                            strong Cha
                            | &nbsp;{{npc.Cha}}
                    li
                        span
                            strong Base Atk
                            | &nbsp;{{npc.BaseAtk}};
                        span
                            strong CMB
                            | &nbsp;{{npc.CMB}};
                        span
                            strong CMD
                            | &nbsp;{{npc.CMD}}
                    li
                        span
                            strong Feats
                            | &nbsp;{{npc.Feats}}
                    li
                        span
                            strong Skills
                            | &nbsp;{{npc.Skills}}
                        span(ng-if="npc.RacialMods")
                            strong Racial Modifiers
                            | &nbsp;{{npc.RacialMods}}
                    li
                        span
                            strong Languages
                            | &nbsp;{{npc.Languages}}
                    li
                        span(ng-if="npc.SQ")
                            strong SQ
                            | &nbsp;{{npc.SQ}}
                    li
                        span
                            span(ng-if="npc.Gear")
                                strong Combat Gear
                                | &nbsp;{{npc.Gear}}
                            span(ng-if="npc.Gear && npc.OtherGear") ;&nbsp;
                            span(ng-if="npc.OtherGear")
                                strong Other Gear
                                | &nbsp;{{npc.OtherGear}}
    .col-xs-12.cat.decor
        span(ng-if='npc.SpecialAbilitiesSafe')
            legend.legend.font-title Special Abilities
            // FIXME Use jQuery to change the <h5> tags into <p> or <div>
            div(ng-bind-html='npc.SpecialAbilitiesSafe',linkify-spells='npc.SpecialAbilitiesSafe')
    .col-xs-12.cat.decor(ng-if='npc.Description')
        legend.legend.font-title Description
        div(ng-bind-html='npc.DescriptionSafe',linkify-spells='npc.DescriptionSafe')
