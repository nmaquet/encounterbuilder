.form-inline.form-group
    .col-xs-12
        label(for='sort') Sort by:&nbsp;
        select.form-control#monster-sort(ng-model='orderProp')
            option(value='name') Name
            option(value='cr') Challenge Rating

.col-xs-12
    table.monsters.table.table-striped.table-condensed
        thead
            tr.result-row
                th Name
                th CR
                th(colspan='3') Source
        tbody
            tr.pointer.monster-row(ng-repeat='monster in monsters')
                td.name-container(ng-class='{selected: selectedMonsterId == monster.id}', ng-click='selectMonster(monster.id)')
                    span {{monster.Name}}
                td.price-container(ng-class='{selected: selectedMonsterId == monster.id}', ng-click='selectMonster(monster.id)')
                    span {{monster.CR | numberToFractionString}}
                td.source-container(ng-class='{selected: selectedMonsterId == monster.id}', ng-click='selectMonster(monster.id)')
                    abbr(title='{{monster.Source}}')
                        small {{monster.Source | abbreviateMonsterSource}}
                td.input-container(ng-class='{selected: selectedMonsterId == monster.id}')
                    input(type='text', placeholder='1', ng-model='monster.amountToAdd')
                td.btn-container(ng-class='{selected: selectedMonsterId == monster.id}')
                    button.item-btn.add-item-btn(ng-class="{disabled: !selectedEncounter}", ng-disabled="!selectedEncounter", ng-click='addMonster(monster)')
                        i.icon.icon-plus
                            | +
    pagination.pagination-sm.page.pointer(boundary-links='true', total-items='totalItems', page='currentPage', items-per-page='itemsPerPage', max-size='maxSize', previous-text='‹', next-text='›', first-text='«', last-text='»')