section.sp-menu.sp-menu-vertical.sp-menu-left(slide-menu="leftSidebarOpened", ng-controller='SidebarController')
    header.sp-menu-header
        .dropdown.encounter-dropdown-container.is-pointer
            a.encounter-dropdown.dropdown-toggle.col-xxs-12.col-xs-12(role='button', data-toggle='dropdown')
                span.encounter-dropdown-name Create
                i.icon.fa.fa-angle-down.square.white.pull-right
            ul.dropdown-menu(role='menu', aria-labelledby='dropdownMenu')
                li
                    a.encounter-dropdown-create.is-pointer(tabindex='-1', ng-click='createEncounter()')
                        i.icon.fa.fa-plus
                        strong &nbsp;Create new encounter
                li
                    a.encounter-dropdown-create.is-pointer(tabindex='-1', ng-click='createBinder()')
                        i.icon.fa.fa-folder
                        strong &nbsp;Create new binder
    .sp-menu-content
        content-tree