#chronicles(ng-controller="ChroniclesController")
    .row.max-width-720
        .panel.panel-default(ng-repeat="chronicle in chronicles")
            .panel-body
                a.is-pointer(ng-click="selectChronicle(chronicle)") {{chronicle.name}}
                .btn-group.pull-right
                    button.btn.btn-default(ng-click="selectChronicle(chronicle)") Edit
                    button.btn.btn-danger(ng-click="selectChronicle(chronicle)", title="Delete Chronicle")
                        i.icon.fa.fa-trash-o
            .panel-footer
                | {{chronicle.synopsis}}

        button.btn.btn-primary(ng-click="createChronicle()")
            i.icon.fa.fa-plus &nbsp;&nbsp;
            | New Chronicle