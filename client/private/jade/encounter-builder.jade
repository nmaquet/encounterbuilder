header
    include _header
.container.app-content
    .row
        .col-sm-4.col-lg-3
            .section.col-sm-12.encounter-well.gradient.shadow(ng-controller='EncounterController')
                include _encounter
        .col-sm-8.col-lg-9(ng-controller='TabController')
            .row
                .col-xs-12.no-padding-left
                    ul.nav.nav-tabs
                        li
                            a#monstersTab.pointer(ng-click="showTab('monsters')", data-toggle="tab")
                                | Monsters
                        li
                            a#itemsTab.pointer(ng-click="showTab('items')", data-toggle="tab")
                                | Items
            .row(ng-show="selectedTab === 'monsters'")
                .col-xs-12.no-padding-left
                    .col-md-5.col-lg-4.no-padding-left.shadow(ng-controller='SearchMonsterController')
                        .section.sidebar-nav
                            include _monster-filters
                        .section.result-list
                            include _monster-list
                    .col-md-7.col-lg-8.section.shadow(ng-controller='MonsterDetailController')
                        include _monster-details
            .row(ng-show="selectedTab === 'items'")
                .col-xs-12.no-padding-left
                    .col-md-5.col-lg-4.no-padding-left.shadow(ng-controller='SearchItemController')
                        .section.sidebar-nav
                            include _item-filters
                        .section.result-list
                            include _item-list
                    .col-md-7.col-lg-8.section.shadow(ng-controller='ItemDetailsController')
                        include _item-details
footer
    include _footer
