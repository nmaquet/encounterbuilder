{
    "name"         : "encounter-builder",
    "version"      : "0.0.1",
    "description"  : "Most Amazing Useful App",
    "main"         : "server/server.js",
    "scripts": {
        "start"       : "node server/server.js",
        "dev"         : "nodemon -w client/private/ -w server -e js,scss,css",
        "test-client" : "karma start test/conf/karma-client-unit.conf --single-run",
        "test-e2e"    : "karma start test/conf/karma-e2e.conf --single-run",
        "test-server" : "mocha --reporter mocha-jenkins-reporter --recursive test/server-unit",
        "test-server-stress" : "mocha --reporter mocha-jenkins-reporter --recursive test/server-stress",
        "test-all" : "npm run-script test-client && npm run-script test-server && npm run-script test-e2e"
    },
    "author"       : "Nic & Chris",
    "dependencies" : {
        "express"     : "~3.4.4",
        "mongodb"     : "~1.3.23",
        "uglify-js"   : "~2.4",
        "jade"        : "~1.1.5",
        "async"        : "0.2.10",
        "connect-mongo": "~0.3",
        "node-sass" : "0.8.6"
    },
    "devDependencies" : {
        "mongoose"    : "~3.6.2",
        "chai"        : "1.8.1",
        "mocha"       : "~1.16",
        "mocha-jenkins-reporter" : "*",
        "phantomjs"   : "1.9.7-1",
        "karma"       : "~0.10",
        "karma-mocha" : "~0.1",
        "karma-chai"  : "0.0.2",
        "karma-ng-scenario" : "~0.1",
        "karma-coverage" : "0.1.2",
        "karma-phantomjs-launcher" : "*",
        "karma-junit-reporter" : "*",
        "xml2js"   : "*",
        "csvtojson"   : "*",
        "cheerio" :"*",
        "request":"*",
        "fast-levenshtein" : "*"
      }
}
